<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@android:color/darker_gray"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <com.example.testapplication.CustomViews.DrawSquares
        android:id="@+id/beaconLocation"

        android:layout_width="300dp"
        android:layout_height="300dp"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


    <TextView
        android:id="@+id/textBeaconsActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/beaconLocation"
        android:layout_toRightOf="@id/noBeaconsActive"

        android:text=" Beacons Currently Active" />

    <TextView
        android:id="@+id/noBeaconsActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/beaconLocation"

        android:text="NUMBER OF BEACONS HERE" />

    <TextView
        android:id="@+id/textDistanceBeacons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noBeaconsActive"

        android:text="Distance to Beacons:" />

    <TextView
        android:id="@+id/distanceBeacons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noBeaconsActive"
        android:layout_toRightOf="@id/textDistanceBeacons"
        android:text="  METERS METERS" />
</RelativeLayout>